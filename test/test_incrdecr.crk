import crack.io cout;
if (true) {
    byte x = 100;
    if (++x != 101) cout `++x != 101\n`;
    if (x != 101) cout `after ++x, x != 101\n`;
    if (--x != 100) cout `--x != 100\n`;
    if (x != 100) cout `after --x, x != 100\n`;
    if (x++ != 100) cout `x++ != 100\n`;
    if (x != 101) cout `after x++, x != 101\n`;
    if (x-- != 101) cout `x-- != 101\n`;
    if (x != 100) cout `after x--, x != 100\n`;
}
